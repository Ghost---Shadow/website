{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "import/prefer-default-export": "off",
    "linebreak-style": "off",
    "semi": "off",
    "react/prop-types": "off",
    "no-unused-vars": "warn",
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
      "files": ["**/*.stories.*"],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}